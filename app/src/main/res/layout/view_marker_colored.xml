<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/circle_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/marker_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="10dp"
        android:height="19dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.19"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/marker_distance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="26dp"
        android:height="10dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.11"
        android:text="@string/default_marker_distance_value"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_in_bottom_sheet_description" />
</LinearLayout>