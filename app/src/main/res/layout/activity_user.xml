<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="ua.lviv.iot.ui.user.UserViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_user_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context=".ui.user.UserActivity">

        <!-- Collapsing toolbar -->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleGravity="center_horizontal"
                app:expandedTitleMarginTop="80dp"
                app:title="Name Surname"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <TextView
                        android:layout_marginTop="130dp"
                        android:id="@+id/tv_user_city"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_centerHorizontal="true"
                        android:drawableStart="@drawable/ic_user_location"
                        android:drawablePadding="2dp"
                        android:singleLine="true"
                        android:text="Lviv"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_user_points"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@id/tv_user_city"
                        android:layout_centerHorizontal="true"
                        android:drawableStart="@drawable/ic_attach_money_white_24dp"
                        android:singleLine="true"
                        android:text=" 0 "
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/user_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:contentInsetStartWithNavigation="8dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <Space
                        android:id="@+id/target_collapsed_circle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"/>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


        <!-- Fragment container (Scrollable) -->
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedscroll_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/fl_user_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />
        </android.support.v4.widget.NestedScrollView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_avatar"
            app:civ_border_color="#EEE"
            app:civ_border_width="3dp"
            app:civ_circle_background_color="#d8e4ec"
            app:collapsedTarget="@id/target_collapsed_circle"
            app:layout_behavior="ua.lviv.iot.ui.user.CollapsingImageBehavior" />

        <!-- Images list -->
        <HorizontalScrollView
            android:id="@+id/horizontalscrollview_user"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:fitsSystemWindows="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:src="@drawable/quest_image_example1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/quest_image_example2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/quest_image_example3" />
            </LinearLayout>
        </HorizontalScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>