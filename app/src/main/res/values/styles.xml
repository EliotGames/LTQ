<resources>

    <!-- Application Theme-->
    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Activities' themes -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- View`s styles-->
    <style name="DefaultButton">
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="strokeColor">#fff</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserTitleTextview">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Other -->
    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>
</resources>